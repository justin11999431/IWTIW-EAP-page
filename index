const App = () => {
  const { pageTitle, heroSection, footerSection, styling } = pageData;

  // Tailwind CSS classes based on JSON styling and new color palette
  // Further reduced vertical margin for header
  const headerClasses = `text-5xl font-bold text-[#604478] text-center my-2 md:my-4 lg:my-6 px-4`;
  // Further reduced top margin for footer, removed italic, and adjusted text size for h4
  const footerClasses = `text-[#212529] text-center max-w-4xl mx-auto mt-4 md:mt-6 lg:mt-8 px-4 pb-8 text-base md:text-lg font-normal`;
  const bodyBgColor = styling.body.backgroundColor;

  // Updated hero image URL
  const heroImageUrl = "https://private-user-images.githubusercontent.com/224313597/474681194-859d7050-c7ff-4233-ab0c-e2639d2857d2.png?jwt=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJnaXRodWIuY29tIiwiYXVkIjoicmF3LmdpdGh1YnVzZXJjb250ZW50LmNvbSIsImtleSI6ImtleTUiLCJleHAiOjE3NTQ0MjIwNDksIm5iZiI6MTc1NDQyMTc0OSwicGF0aCI6Ii8yMjQzMTM1OTcvNDc0NjgxMTk0LTg1OWQ3MDUwLWM3ZmYtNDIzMy1hYjBjLWUyNjM5ZDI4NTdkMi5wbmc_.194OgiX78b9UbJlmHZA5vv6MPclnu58RUwvScuualmk";
  const placeholderImageUrl = "https://placehold.co/250x250/876E98/8638D7?text=Hero+Image"; // Placeholder for error

  return (
    <div className={`min-h-screen ${bodyBgColor === '#f8f9fa' ? 'bg-gray-50' : ''} font-inter flex flex-col items-center p-4`}>
      {/* Page Title */}
      <h1 className={headerClasses}>
        {pageTitle}
      </h1>

      {/* Hero Section - Image Layout */}
      <div className="relative w-full max-w-5xl aspect-[16/9] md:aspect-[4/3] lg:aspect-[3/2] mx-auto mb-4 md:mb-6 lg:mb-8 flex items-center justify-center">
        {/* Central Hero Image */}
        <img
          src={heroImageUrl}
          alt="Comprehensive Wellness Ecosystem Diagram"
          className="absolute w-48 h-48 md:w-64 md:h-64 lg:w-80 lg:h-80 object-contain rounded-full shadow-lg"
          onError={(e) => { e.target.onerror = null; e.target.src = placeholderImageUrl; }}
        />

        {/* Service Boxes */}
        {heroSection.services.map((service, index) => {
          let positionClasses = "";
          // Adjust positioning for responsiveness to closely surround the hero image
          // On small screens, stack them. On larger screens, use absolute positioning.
          switch (service.position) {
            case "top-left":
              positionClasses = "md:absolute md:top-[10%] md:left-[10%]";
              break;
            case "top-right":
              positionClasses = "md:absolute md:top-[10%] md:right-[10%]";
              break;
            case "mid-left":
              positionClasses = "md:absolute md:top-1/2 md:-translate-y-1/2 md:left-[5%]";
              break;
            case "mid-right":
              positionClasses = "md:absolute md:top-1/2 md:-translate-y-1/2 md:right-[5%]";
              break;
            case "bottom-left":
              positionClasses = "md:absolute md:bottom-[10%] md:left-[10%]";
              break;
            case "bottom-right":
              positionClasses = "md:absolute md:bottom-[10%] md:right-[10%]";
              break;
            default:
              break;
          }

          return (
            <div
              key={index}
              className={`
                ${positionClasses}
                w-full md:w-1/3 lg:w-1/4 xl:w-1/5
                p-4 md:p-6
                mb-6 md:mb-0
                flex flex-col items-center text-center
                text-[#212529]
                rounded-xl
                bg-white
                shadow-md
                md:bg-transparent md:shadow-none
                md:max-w-[280px]
              `}
            >
              <h3 className="font-semibold text-lg md:text-xl text-[#7C61B1] mb-2">{service.name}</h3>
              <p className="text-sm md:text-base leading-relaxed">{service.description}</p>
            </div>
          );
        })}
      </div>

      {/* Footer Section */}
      <h4 className={footerClasses}>
        {footerSection.text}
      </h4>
    </div>
  );
};

export default App;
