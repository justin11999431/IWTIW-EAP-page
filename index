<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Comprehensive Wellness Ecosystem</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-inter flex flex-col items-center p-4 min-h-screen">
  <!-- React root -->
  <div id="root" class="w-full"></div>

  <!-- React + ReactDOM -->
  <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
  <!-- Babel for in-browser JSX compilation -->
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

  <!-- Your App code -->
  <script type="text/babel">
    const pageData = {
      pageTitle: "Comprehensive Wellness Ecosystem",
      heroSection: {
        type: "imagePlaceholder",
        services: [
          { name: "Virtual Primary Care", description: "Connecting employees with physicians for routine care, preventive services, and chronic condition management.", position: "top-left" },
          { name: "Mental Health Support", description: "Confidential in the moment access to therapists and psychiatrists for emotional and psychological wellbeing.", position: "top-right" },
          { name: "Prescription Coverage", description: "Cost-effective medication management through partner pharmacies and discount programs.", position: "mid-left" },
          { name: "Musculoskeletal Care", description: "Specialized treatment for back, joint, and muscle conditions affecting workplace comfort and productivity.", position: "mid-right" },
          { name: "TeleVet Pet Care", description: "Supporting the complete family by providing veterinary care for beloved pets, reducing stress and worry.", position: "bottom-left" },
          { name: "Weight Management", description: "Structured programs including GLP-1 options for sustainable weight loss and improved health outcomes.", position: "bottom-right" },
        ]
      },
      footerSection: {
        text: "The iWILL 'til i'mWELL Employee Assistance Program (EAP) provides Telemedicine and confidential Telecounseling for all employees, addressing issues like marital, family, emotional, and substance abuse challenges. Here are some of our most prominent services for companies/organizations:"
      }
    };

    function App() {
      const { pageTitle, heroSection, footerSection } = pageData;
      const heroImageUrl = "https://your-image-url.png";
      const placeholderImageUrl = "https://placehold.co/250x250/876E98/8638D7?text=Hero+Image";

      const headerClasses = "text-5xl font-bold text-[#604478] text-center my-4 px-4";
      const footerClasses = "text-[#212529] text-center max-w-4xl mx-auto mt-6 px-4 pb-8 text-base md:text-lg";

      return (
        <div className="flex flex-col items-center w-full">
          <h1 className={headerClasses}>{pageTitle}</h1>

          <div className="relative w-full max-w-5xl aspect-[16/9] mx-auto mb-8 flex items-center justify-center">
            <img
              src={heroImageUrl}
              alt="Ecosystem Diagram"
              className="absolute w-64 h-64 object-contain rounded-full shadow-lg"
              onError={(e) => { e.target.onerror = null; e.target.src = placeholderImageUrl; }}
            />

            {heroSection.services.map((svc, i) => {
              let pos = "";
              switch (svc.position) {
                case "top-left":    pos = "md:absolute md:top-10 md:left-10"; break;
                case "top-right":   pos = "md:absolute md:top-10 md:right-10"; break;
                case "mid-left":    pos = "md:absolute md:top-1/2 md:-translate-y-1/2 md:left-5"; break;
                case "mid-right":   pos = "md:absolute md:top-1/2 md:-translate-y-1/2 md:right-5"; break;
                case "bottom-left": pos = "md:absolute md:bottom-10 md:left-10"; break;
                case "bottom-right":pos = "md:absolute md:bottom-10 md:right-10"; break;
              }
              return (
                <div key={i} className={`${pos} w-full md:w-1/3 lg:w-1/4 p-4 flex flex-col items-center text-center bg-white rounded-xl shadow-md`}>
                  <h3 className="font-semibold text-lg md:text-xl text-[#7C61B1] mb-2">{svc.name}</h3>
                  <p className="text-sm md:text-base">{svc.description}</p>
                </div>
              );
            })}
          </div>

          <h4 className={footerClasses}>{footerSection.text}</h4>
        </div>
      );
    }

    // Render into root
    const root = ReactDOM.createRoot(document.getElementById('root'));
    root.render(<App />);
  </script>
</body>
</html>
